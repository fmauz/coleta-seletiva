<% if @cards.count > 0%>
  <table class="table table-hover table-bordered table-margin">
    <thead>
      <tr>
        <th>Id</th>
        <th>Questionário</th>
        <th>Município</th>
        <th>Ano</th>
        <th>Usuario</th>
        <th>Data de cadastro</th>
        <th class="table-action"></th>
      </tr>
    </thead>

    <tbody>
      <% @cards.each do |card|%>
      <tr>
        <td><%= card.id %></td>
        <td><%= card.survey.name %></td>
        <td><%= card.county.name %></td>
        <td><%= card.year %></td>
        <td><%= card.person.name %></td>
        <td><%= l card.created_at, :format => :long %></td>
        <td class="action_two">



          <a href="<%= card_path( card )%>" class="glyphicon glyphicon-eye-open table-icon"><span></span></a>

          <% if current_user.is_dev? %>
          
          <a href="<%= edit_card_path( card )%>" class="glyphicon glyphicon-pencil table-icon"><span></span></a>

          <%= link_to '', card_path( card ), method: :delete, data: { confirm: 'Tem certeza?' }, class: "glyphicon glyphicon-remove-circle table-icon table-remove" %>
          <%end%>
          </td>

        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= empty_array_message @cards %>

<div class="cb">
