<% content_for :scripts do %>
<script type="text/javascript">
$(function(){
  $(".newsletter_form").submit(function(evt){
    var $form = $(this);
    evt.preventDefault();
    $.post( $form.attr("action") , $form.serialize()).then(function(data){
        alert("O seu email foi inscrito na newsletter com sucesso!")
      })
      .fail(function(data){
        console.log( arguments );
        alert("Este email ja está inscrito.")
      }).always(function(){
        $form.find(":input").val("");
      });
  });

  $('#myModal').modal('show');
});
</script>
<% end %>


