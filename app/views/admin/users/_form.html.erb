<%= form_for( [:admin, @user], html: { role: "form", class: "form-horizontal"} ) do |f| %>
  <%= @user.errors.full_messages.join(", ")%>
  <fieldset>
    <legend>Dados Básicos</legend>
    
    <%=f.fields_for :person do |p|%>
      <div class="form-group">
        <%= p.label :name, "Nome", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= p.text_field :name, class: "form-control", placeholder: "nome" %>
        </div>  
      </div>
    <%end%>

    <div class="form-group">
      <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", placeholder: "nome" %>
      </div>  
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "nome" %>
      </div>  
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmação de Senha", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "nome" %>
      </div>  
    </div>

    <div class="form-group">
      <%= f.label :role, "Grupo", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :role_id, Role.all.collect{|a| [a.name, a.id] }, {}, class: "form-control", placeholder: "nome" %>
      </div>  
    </div>

  </fieldset>

  <fieldset>
    <legend></legend>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Salvar</button> ou 
        <a href="<%= admin_users_path%>">cancelar</a>
      </div>
    </div>
  </fieldset>

<% end %>
