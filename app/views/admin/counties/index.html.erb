<%content_for :title do%>
<h1>Listagem de <%= I18n.t("resource.county")%>s </h1>
<%end%>
<%= button_to_new new_admin_county_path %>

<%= flash_notice_render %>

<table class="table table-hover table-bordered <%= "hide" if @counties.empty? %>">
  <thead>
    <tr>
      <th>Id</th>
      <th>CÃ³digo</th>
      <th>Nome</th>
      <th>CNPJ</th>
      <th class="table-action"></th>
    </tr>
  </thead>

  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td><%= county.id %></td>
        <td><%= county.code %></td>
        <td><%= county.name %></td>
        <td><%= county.cnpj %></td>
        <td>
          <%= link_to '', [ :admin, county], class: "glyphicon glyphicon-eye-open table-icon" %>
