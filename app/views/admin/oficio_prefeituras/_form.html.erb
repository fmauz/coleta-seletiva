<%= form_for([:admin, @oficio_prefeitura], html: { role: "form", class: "form-horizontal"}) do |f| %>

  <fieldset>
    <legend>Dados Básicos</legend>

    <div class="form-group">
      <%= f.label :name, "Nome", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "nome" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Descrição", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", placeholder: "description" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :data_registro, "Data do Registro", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :data_registro, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name_resp, "Nome do Responsavel", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name_resp, class: "form-control", placeholder: "nome" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :county_id, "Municipio", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :county_id, County.all.collect{|a| [ a.name, a.id ]}, {}, class: "form-control", placeholder: "nome" %>
      </div>
    </div>

  </fieldset>


  <fieldset>
    <legend></legend>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Salvar</button> ou 
        <a href="<%= admin_oficio_prefeituras_path %>">cancelar</a>
      </div>
    </div>
  </fieldset>

<% end %>
