<%content_for :title do%>
<h1>Listagem de Ofícios</h1>
<%end%>

<%= button_to_new new_admin_oficio_prefeitura_path %>

<%= flash_notice_render %>

<table class="table table-hover table-bordered <%= "hide" if @oficio_prefeituras.empty? %>">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Município</th>
      <th class="table-action"></th>
    </tr>
  </thead>

  <tbody>
    <% @oficio_prefeituras.each do |oficio_prefeitura| %>
      <tr>
        <td><%= oficio_prefeitura.id %></td>
        <td><%= oficio_prefeitura.name %></td>
        <td><%= oficio_prefeitura.description %></td>
        <td><%= oficio_prefeitura.county.name %></td>
        <td>
          <%= link_to '', [ :admin, oficio_prefeitura], class: "glyphicon glyphicon-eye-open table-icon" %>
          <%= link_to '', edit_admin_oficio_prefeitura_path( oficio_prefeitura ), class: "glyphicon glyphicon-pencil table-icon" %>
          <%= link_to '', [ :admin, oficio_prefeitura ], method: :delete, data: { confirm: 'Tem certeza?' }, class: "glyphicon glyphicon-remove-circle table-icon table-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= empty_array_message @oficio_prefeituras %>
