<h1>Listagem de <%= I18n.t("resource.survey")%>s </h1>

<%= button_to_new new_admin_survey_path %>

<%= flash_notice_render %>

<table class="table table-hover table-bordered <%= "hide" if @surveys.empty? %>">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Seções</th>
      <th class="table-action"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.id %></td>
        <td><%= survey.name %></td>
        <td><%= survey.link_to_sections %></td>
        <td>
          <%= link_to '', [ :admin, survey], class: "glyphicon glyphicon-eye-open table-icon" %>
          <%= link_to '', edit_admin_survey_path(survey), class: "glyphicon glyphicon-pencil table-icon" %>
          <%= link_to '', [ :admin, survey ], method: :delete, data: { confirm: 'Tem certeza?' }, class: "glyphicon glyphicon-remove-circle table-icon table-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= empty_array_message @surveys %>
