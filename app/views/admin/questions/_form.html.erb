<%= form_for([:admin, @survey, @section, @question], html: { role: "form", class: "form-horizontal"}) do |f| %>

  <fieldset>
    <legend>Dados Básicos</legend>
    <div class="form-group">
      <%= f.label :code, "Código", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :code, class: "form-control", placeholder: "code" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, "Texto da pergunta", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :content, class: "form-control", placeholder: "content" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :help_block, "Texto de ajuda", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :help_block, class: "form-control", placeholder: "help block" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :css_class, "CSS Class", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :css_class, class: "form-control", placeholder: "css class" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-12">
        <div class="checkbox">
          <label><%= f.check_box :clear_question  %> Clear CSS ?</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-12">
        <div class="checkbox">
          <label><%= f.check_box :multiple_answer  %> Multiplas Respostas ?</label>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend></legend>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Salvar</button> ou 
        <button type="submit" data-save-add-other class="btn btn-success">Salvar e adicionar outro</button> ou 
        <a href="<%= admin_survey_section_questions_path( @survey, @section )%>">cancelar</a>
      </div>
    </div>
  </fieldset>

<% end %>
