 body {
  padding-top: 50px;
}

@font-face {
  font-family: 'Glyphicons Halflings';
  src: url("<%= asset_path "glyphicons-halflings-regular.eot" %>");
  src: url("<%= asset_path "glyphicons-halflings-regular.eot#iefix" %>") format('embedded-opentype'), url("<%= asset_path 'glyphicons-halflings-regular.woff' %>" ) format('woff'), url("<%= asset_path 'glyphicons-halflings-regular.ttf' %>") format('truetype'), url("<%= asset_path 'glyphicons-halflings-regular.svg#glyphicons_halflingsregular'%>") format('svg');
}

.table-icon { font-size: 20px; margin-left:10px; }
.table-remove,
.table-remove:hover { color: #c00; }

.table-icon:hover { text-decoration: none; }
.table-margin { margin-top:10px;}

.cb {
  display: block;
  text-align: center;
}

.add-remove-icon,
.add-remove-icon:hover { font-size: 30px;  color:#c00; text-decoration: none}

.section-question h2 { background: #aa9955; padding:10px;}
.section-question h2 small { color:#FFF; }

.has-error h4 { color: #b94a48; }